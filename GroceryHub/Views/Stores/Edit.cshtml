@model GroceryHub.Models.Store

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="m-0 font-weight-bold" style="color: #89ab2a;">Edit&nbsp;</p>
            </div>

            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-lg-6">
                            <input type="hidden" asp-for="StoreID" />

                            <div class="form-group">
                                <strong><label asp-for="StoreName"></label></strong>
                                <input asp-for="StoreName" class="form-control" placeholder="Name">
                                <span asp-validation-for="StoreName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <strong><label asp-for="Location"></label></strong>
                                <select asp-for="Location" class="form-control" asp-items="@Html.GetEnumSelectList<Governorates>()"></select>
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <strong> <label asp-for="Rate"></label></strong>
                                <input class="form-control" asp-for="Rate">
                                <span asp-validation-for="Rate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <strong><label asp-for="Website"></label></strong>
                                <input asp-for="Website" class="form-control">
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <strong><label asp-for="PhoneNumber"></label></strong>
                                <input asp-for="PhoneNumber" class="form-control">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <strong><label asp-for="Type" class="control-label"></label></strong>
                                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<MarketType>()"></select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <strong>
                                    <label asp-for="OpenHour" class="control-label"></label>
                                </strong>
                                <input asp-for="OpenHour" class="form-control" />
                                <span asp-validation-for="OpenHour" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <strong><label asp-for="CloseHour" class="control-label"></label></strong>
                                <input asp-for="CloseHour" class="form-control" />
                                <span asp-validation-for="CloseHour" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <strong><label asp-for="Image" class="control-label"></label></strong>
                                <input name="img" id="img" asp-for="Image" class="form-control" type="file" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button class="btn btn-primary btn-sm" type="submit" value="Save" style="background-color: #89ab2a;">Edit</button>

                    </div>
                    <div class="text-left">
                        <a asp-action="Index">Back to List</a>

                    </div>

                </form>

            </div>

        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
