@model GroceryHub.Models.Advertisment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Advertisment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdvertismentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdvertismentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdvertismentPhoto)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AdvertismentPhoto != null)
            {<img class="w-100 d-block" width="225" height="153" src="data:image/png;base64,@Convert.ToBase64String(@Model.AdvertismentPhoto)" alt="Slide Image" />}
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdvertismentDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdvertismentDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AdvertismentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
