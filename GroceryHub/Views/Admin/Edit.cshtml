@model AppUser

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="m-0 font-weight-bold" style="color: #89ab2a;">Edit&nbsp;</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <strong><label asp-for="Id"></label></strong>
                                <input asp-for="Id" class="form-control" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="col-lg-6">
                            <div class="form-group">
                                <strong><label asp-for="Email"></label></strong>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <strong><label for="password">Password</label></strong>
                                <input name="password" class="form-control" />
                            </div>
                        </div>
                    </div>


            <div class="form-group text-right">
                <input class="btn btn-primary btn-sm" type="submit" value="Save" style="background-color: #89ab2a;" />
            </div>
            </form>
        </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}