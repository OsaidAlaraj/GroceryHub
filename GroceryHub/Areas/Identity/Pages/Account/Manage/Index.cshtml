@page
@model IndexModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profile";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<h3 class="text-dark mb-4">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="m-0 font-weight-bold" style="color: #89ab2a;">Update Your Information</p>
            </div>
            <div class="card-body">
                <form asp-page-handler="UpdateUserInfo" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>Email Address</strong>
                                </label>
                                <input class="form-control" asp-for="Input.Email" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>First Name</strong>
                                </label>

                                <input class="form-control" type="text" placeholder="John" asp-for="Input.FirstName">
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="last_name">
                                    <strong>Last Name</strong>
                                </label>
                                <input class="form-control" type="text" placeholder="Doe" asp-for="Input.LastName">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>Phone Number</strong>
                                </label>
                                <input class="form-control" type="tel" asp-for="Input.PhoneNumber">
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>Address</strong>
                                </label>
                                <select class="form-control" asp-for="Input.Address" asp-items="@Html.GetEnumSelectList<Governorates>()"></select>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-sm" type="submit" style="background-color: #89ab2a;" id="update-profile-button">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow mb-5">
            <div class="card-header py-3">
                <p class="m-0 font-weight-bold" style="color: #89ab2a;">Change Your Password</p>
            </div>
            <div class="card-body">
                <form asp-page-handler="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>Old Password</strong>
                                    <br>
                                </label>
                                <input class="form-control" type="password" asp-for="Input.OldPassword" required>
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <label>
                                    <strong>New Password</strong>
                                </label>
                                <input class="form-control" type="password" asp-for="Input.NewPassword" required>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-sm" type="submit" style="background-color: #89ab2a;">Change Password</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}